{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist",
    "declaration": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
